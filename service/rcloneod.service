[Unit]
Description=rclonemount
After=multi-user.target

[Service]
Type=simple
User=brockar
ExecStart=/bin/rclone mount onedrive: /home/brockar/Documents/rclone/onedrive/ --vfs-cache-mode full --check-first
ExecStop=/usr/bin/fusermount -uz /home/brockar/Documents/rclone/onedrive/
Restart=on-abort

[Install]
WantedBy=default.target

